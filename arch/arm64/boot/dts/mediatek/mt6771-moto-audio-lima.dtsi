/ {
	dummy_vreg: dummy_vreg {
		compatible = "regulator-fixed";
		status = "ok";
		regulator-name = "dummy_vreg";
		regulator-always-on;
	};
};

&pio {
	amp_reset:amp_reset_cfg {
		combo_pins {
			pins = <PINMUX_GPIO153__FUNC_GPIO153>;
			slew-rate = <1>;
			output-high;
		};
        };

	amp_spk_irq:amp_spk_irq_cfg {
		combo_pins {
			pins = <PINMUX_GPIO27__FUNC_GPIO27>;
			slew-rate = <0>;
			output-high;
		};
        };

	amp_rcv_irq:amp_rcv_irq_cfg {
		combo_pins {
			pins = <PINMUX_GPIO28__FUNC_GPIO28>;
			slew-rate = <0>;
			output-high;
		};
        };
};

&spi4 {
	cs35l41_spk: cs35l41@0 {
		#sound-dai-cells = <1>;
		compatible = "cirrus,cs35l41";
		spi-max-frequency = <9600000>;
		reg = <0>;
		reset-gpios = <&pio 153 0>;
		interrupt-parent = <&pio>;
		interrupts = <27 IRQ_TYPE_LEVEL_LOW 27 0>;

		status = "ok";
		VA-supply = <&dummy_vreg>;
		VP-supply = <&dummy_vreg>;
		cirrus,boost-peak-milliamp = <4500>;
		cirrus,boost-ind-nanohenry = <1000>;
		cirrus,boost-cap-microfarad = <15>;

		cirrus,asp-sdout-hiz = <0x1>;

		pinctrl-names = "default";
		pinctrl-0 = <&amp_reset>;

		cirrus,gpio-config2 {
			cirrus,gpio-src-select = <0x4>;
			cirrus,gpio-output-enable;
		};
	};
