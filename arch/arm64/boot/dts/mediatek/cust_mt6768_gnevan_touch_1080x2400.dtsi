&spi2 {
	#address-cells = <1>;
	#size-cells = <0>;

	ilitek@0{
		compatible =  "tchip,ilitek";
		spi-max-frequency = <10000000>;
		reg = <0x0>;
		status = "okay";

		touch,irq-gpio = <&pio 0 0x0>;
		touch,reset-gpio = <&pio 23 0x0>;
	};
};


