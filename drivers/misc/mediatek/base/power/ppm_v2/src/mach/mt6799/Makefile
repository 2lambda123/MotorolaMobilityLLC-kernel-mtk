# TODO: use extbuck option
ALL_BUCK_SHARED = 0

ccflags-y +=	\
	-I$(PPM_ROOT_DIR)/inc \
	-I$(srctree)/drivers/misc/mediatek/base/power/$(CONFIG_MTK_PLATFORM)/	\
	-I$(srctree)/drivers/misc/mediatek/base/power/upower_v1/inc

# platform dependent functions
obj-y += mtk_ppm_platform.o
# power state settings
obj-y += mtk_ppm_power_state.o
# power data related
obj-y += mtk_ppm_power_data.o
# limit calculation algorithm
ifeq ($(ALL_BUCK_SHARED), 1)
ccflags-y += -DALL_BUCK_SHARED
obj-y += mtk_ppm_cobra_algo_allshared.o
else
obj-y += mtk_ppm_cobra_algo.o
endif
